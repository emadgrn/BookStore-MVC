
@model List<UI.Models.DTOs.Category.GetCategoryDto>

@{
    ViewData["Title"] = "مدیریت دسته‌بندی‌ها";
}

<div class="container mt-5" dir="rtl">

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold" style="color:#111827;">مدیریت دسته‌بندی‌ها</h3>
        <a asp-controller="Category" asp-action="Create" class="btn btn-success fw-bold">
            <i class="bi bi-person-plus-fill me-1"></i> ایجاد دسته‌بندی جدید
        </a>
    </div>

    <!-- Category Table -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">عنوان</th>
                        <th scope="col">توصیف مختصر</th>
                        @* <th scope="col">آدرس تصویر</th> *@
                        <th scope="col">عملیات</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.BriefDescription</td>
                            @* <td>@category.ImageUrl</td> *@
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="btn btn-sm btn-warning fw-bold">
                                        <i class="bi bi-pencil-square"></i> ویرایش
                                    </a>
                                    <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('آیا از حذف این دسته‌بندی مطمئن هستید؟')">
                                        <button type="submit" class="btn btn-sm btn-danger fw-bold">
                                            <i class="bi bi-trash-fill"></i> حذف
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">هیچ دسته‌بندی‌ای یافت نشد.</div>
    }
</div>

