@using UI.Models.DTOs.User
@using UI.Models.Entities.Enums
@{
    ViewData["Title"] = "پنل مدیریت";
    var user = ViewBag.OnlineUser as GetUserDto;
}
@* @model UI.Models.ViewModels.UserInfoViewModel *@

<div class="container mt-5" dir="rtl">

    <div class="text-center mb-5">
        <h2 class="fw-bold" style="color:#111827;">داشبورد مدیریت</h2>
        <p class="text-muted">به پنل مدیریتی خوش آمدید</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.Error</div>
    }

    @if (user != null)
    {
        <div class="card shadow-sm border-0 rounded-4 mb-5" style="background-color:#f9fafb;">
            <div class="card-body">
                <h5 class="card-title fw-bold mb-3">اطلاعات کاربر</h5>
                <div class="row mb-2">
                    <div class="col-md-6">
                        <p><strong>نام:</strong> @user.Firstname @user.Lastname</p>
                        <p><strong>نام کاربری:</strong> @user.Username</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>شماره موبایل:</strong> @(string.IsNullOrEmpty(user.PhoneNumber) ? "—" : user.PhoneNumber)</p>
                        <p><strong>نقش:</strong> @(user.Role == RoleEnum.Admin ? "مدیر" : "مشتری")</p>
                    </div>
                </div>
                <p class="text-muted small mb-0">تاریخ عضویت: @user.CreatedAt.ToString("yyyy/MM/dd")</p>
            </div>
        </div>
    }

    <div class="row text-center g-4">

        <!-- Users List -->
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="fw-bold mb-3">مدیریت کاربران</h5>
                    <p class="text-muted mb-4">مشاهده و مدیریت کاربران سیستم</p>
                    <a asp-controller="Admin" asp-action="UsersList" class="btn btn-primary fw-bold w-100">
                        نمایش لیست کاربران
                    </a>
                </div>
            </div>
        </div>

        <!-- Categories List -->
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4 h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="fw-bold mb-3">مدیریت دسته‌بندی‌ها</h5>
                    <p class="text-muted mb-4">مشاهده و ویرایش دسته‌بندی‌های موجود</p>
                    <a asp-controller="Admin" asp-action="CategoriesList" class="btn btn-success fw-bold w-100">
                        نمایش لیست دسته‌بندی‌ها
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>